<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="white-text" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.flintcore.excel_expenses.controllers.HomeViewController">
    <top>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnCreateExpense" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="%action.create-expense" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="primary-bg" />
                    </styleClass>
                    <graphic>
                        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/add-plus.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnExportExpense" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="%action.export-expense" HBox.hgrow="ALWAYS">
                    <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="primary-bg" />
                    </styleClass>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/export-file.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
            <styleClass>
                <String fx:value="flex-top-left-fast-options" />
                <String fx:value="small-title-text" />
            </styleClass>
        </HBox>
    </top>
    <center>
        <StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="white-text" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" StackPane.alignment="CENTER">
                    <styleClass>
                        <String fx:value="primary-bg" />
                        <String fx:value="border-light" />
                    </styleClass>
                    <children>
                        <Label fx:id="lbAmountTitle" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="high-title-text" text="%main.available_amount" VBox.vgrow="ALWAYS" />
                        <Label fx:id="lbAmount" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Label" VBox.vgrow="ALWAYS">
                            <styleClass>
                                <String fx:value="huge-text" />
                                <String fx:value="white-text" />
                            </styleClass>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="17.0" right="17.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </StackPane>
    </center>
</BorderPane>
