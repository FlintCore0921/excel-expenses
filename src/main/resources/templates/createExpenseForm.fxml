                                 <children>
                                    <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Local Name">
                                       <font>
                                          <Font name="Segoe UI" size="28.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="localNameTxt" alignment="CENTER" disable="true" editable="false" promptText="%expense.empty-name">
                                       <font>
                                          <Font name="Segoe UI Bold" size="20.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <VBox>
                           <padding>
                              <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
