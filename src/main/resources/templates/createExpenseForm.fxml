                           <children>
                              <VBox>
                                 <children>
                                    <HBox>
                                       <children>
                                          <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="NCF" HBox.hgrow="ALWAYS">
                                             <font>
                                                <Font name="Segoe UI" size="28.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </HBox>
                                    <HBox VBox.vgrow="ALWAYS">
                                       <children>
                                          <TextField fx:id="receiptNFCTxt" alignment="CENTER" promptText="Receipt code" HBox.hgrow="ALWAYS">
                                             <font>
                                                <Font name="Segoe UI Bold" size="20.0" />
                                             </font>
                                          </TextField>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox>
                                       <children>
                                          <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Date" HBox.hgrow="ALWAYS">
                                             <font>
                                                <Font name="Segoe UI" size="28.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </HBox>
                                    <HBox>
                                       <children>
                                          <DatePicker fx:id="receiptDate" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox fx:id="priceSection" opacity="0.0" translateY="-100.0" visible="false">
