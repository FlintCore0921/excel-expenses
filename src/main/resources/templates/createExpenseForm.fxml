                     </padding>
                     <children>
                        <ImageView fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/go_back.png" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
                  <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%expense.form-title" HBox.hgrow="ALWAYS">
