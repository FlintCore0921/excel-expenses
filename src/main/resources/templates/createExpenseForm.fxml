               <children>
                  <VBox fx:id="localSection">
                     <children>
                        <HBox spacing="7.0">
                           <children>
                              <VBox>
                                 <children>
                                    <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Local RNC">
                                       <font>
                                          <Font name="Segoe UI" size="28.0" />
                                       </font>
                                    </Label>
                                    <HBox>
                                       <children>
                                          <StackPane HBox.hgrow="ALWAYS">
